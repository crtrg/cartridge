= form_for @game do |f|
  -if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :creator_id
    = f.number_field :creator_id
  .field
    = f.label :package
    = f.text_field :package
  .actions
    = f.submit 'Save'
