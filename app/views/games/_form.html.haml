.container
  .row
    .span12
      = form_for @game do |f|
        - if @game.errors.any?
          #error_explanation
            %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
            %ul
              - @game.errors.full_messages.each do |msg|
                %li= msg

        .field
          = f.label :title
          = f.text_field :title
        .field
          = f.label :package
          = f.text_area :package
        .actions
          = f.submit 'Save'
