.container
  .row
    .span8
      -# game UI controlled by Cartridge.UI
      %canvas#game-canvas
      .row
        .span4
          #game-status
        .span4
          Share a link to this game:
          = link_to game_url(@game), game_url(@game)

    .span4
      -# chat UI controlled by Cartridge.Page
      #user-count

      #user-listing-wrapper
        %ul#user-listing.unstyled

      #chat-wrapper
        #message-listing

      #chat-footer
        %form.form-inline#chat-form{onsubmit: 'return false'}
          %input{type: 'text', name: 'message', autocomplete: false}
          %button.btn{type: 'submit'} send

