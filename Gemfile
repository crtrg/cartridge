  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  # See https://github.com/sstephenson/execjs#readme for more supported runtimes

  gem 'less-rails'
  gem 'less-rails-bootstrap'

  gem 'uglifier', '>= 1.0.3'
end

# js, yeah
gem 'backbone-rails'
gem 'jquery-rails'
gem 'underscore-rails'

group :development do
  gem 'git-deploy'

  # html2haml
  gem 'hpricot'
